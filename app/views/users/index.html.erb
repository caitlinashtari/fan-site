<h1>Users</h1>

<ul>
  <% @users.each do |user| %>
    <li><%= link_to user.name, user_path(user) %></li>
  <% end %>
</ul>
<hr>

<h2>List of Works</h2>
<ul>
  <% @works.each do |work| %>
    <li><%= link_to work.name, user_work_path(work.user, work) %></li>
  <% end %>
</ul>
<hr>

<p>Sort by:
  <%= link_to "Title", users_path(order: 'name') %>
  or
  <%= link_to "Date Created", users_path(order: 'created_at') %>
</p>


